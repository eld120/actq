<div class="footer__contact">
    <h2 class="text-center">Send Us A Message</h2>
    <form action="https://formsubmit.co/devteam@origma.io" method="POST" class="form-floating mb-3 form" >
            <div class="form-wrapper">
                <div class="contact-header">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="contact-name" name="name" placeholder="Your Name" required>
                        <label for="contact-name">Name</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="contact-subject" name="subject" placeholder="Subject" required>
                        <label for="contact-subject">Subject</label>
                    </div>
                    <div class="form-floating">
                        <input type="email" class="form-control" id="contact-email" name="email" placeholder="Your Email Address" required>
                        <label for="contact-email">Email</label>
                    </div>
                </div>
                <div class="contact-contents">
                    <div class="mb-3">
                        <label for="contact-comments" class="form-label">Comments</label>
                        <textarea name="comments" class="form-control" id="contact-comments" cols="30" rows="10" required></textarea>
                        
                    </div>
                </div>
            </div>
        
        <div class="g-recaptcha" data-sitekey=""></div>
         <button class="btn btn-primary"type="submit">Send</button>
    </form>
</div>